
<!--pages/order/downline.wxml-->
<view class="w100">
  <view class="p_all">Please fill in the following return information carefully</view>
  <view class="p_all01 mt10 bg">
    <view class=" mt10">
      <!-- <view class="c3">退货原因</view> -->
      <input class="inputStyle" name="input" bindinput="reasonInput" placeholder="Return reason" value="{{reason}}" />
    </view>
    <view class=" mt10">
      <!-- <view class="c3">退货描述</view> -->
      <textarea class="min_60 inputStyle" auto-height name="remark" placeholder="Return description" bindinput="remarkInput" value="{{remark}}"/> 
    </view>
    <view class=" mt10">
      <view class="c3">Picture voucher</view>
      <button bindtap="uploadImgs">Upload pictures</button>
    </view>
  </view>
  <view class="p_all01 mtt0">
    <view class="btnGreen">
      <button type="primary" id="btnPay" formType="submit" bindtap="submitReturnData">Determine</button>
    </view>
  </view>
</view>